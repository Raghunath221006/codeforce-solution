#include<bits/stdc++.h>
using namespace std;
int main(){
    int a;
    cin>>a;
    for(int i=0;i<a;i++){
        string b;
        cin>>b;
        if(b.size()<=10){
            cout<<b;
        }
        else{
            int z=b.size()-2;
            cout<<b[0]+to_string(z)+b[b.size()-1];
        }
    }
}
